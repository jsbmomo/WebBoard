<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.joen.board.mappers.main.NoticeMapper">


  <select id="selectNoticeContent" parameterType="Integer" resultType="com.jeon.board.notice.dto.NoticeDTO">
    select * from notice where SEQ=#{seqNum}
  </select>

  <insert id="insertNotice" parameterType="com.jeon.board.notice.dto.NoticeDTO">
    INSERT INTO notice
      (TITLE, WRITER, content, frst_create_time)
    VALUES(#{title}, #{writer}, #{content}, now());
  </insert>

</mapper>
