<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
  "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
  "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
  <!-- main layout -->
  <definition name="layout-tiles" template="/WEB-INF/tiles/layout/default-layout.jsp">
    <put-attribute name="title" value="" />
    <put-attribute name="header" value="/WEB-INF/tiles/layout/headerTemplate.jsp" />
    <put-attribute name="left" value="/WEB-INF/tiles/layout/sidebarTemplate.jsp" />
    <put-attribute name="body" />
    <put-attribute name="foot" value="/WEB-INF/tiles/layout/footerTemplate.jsp" />
  </definition>

  <definition name="board/*" extends="layout-tiles">
    <put-attribute name="title" value="Board-Jeon"/>
    <put-attribute name="body" value="/WEB-INF/views/board/{1}.jsp" />
  </definition>

</tiles-definitions>

